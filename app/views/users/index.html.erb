<div align="center">
<h1 align="center">All Users</h1>
<% @users.each do |user| %>
 <ul class="listing">
  <div class="row">
   <div class="well col-md-4 col-md-offset-4">
    <li class="article-title"><%= link_to user.username, user_path(user) %></li>
    <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
    <% if logged_in? %>
    <div class="article-actions">
     <%= link_to "Edit", edit_user_path(user), class: "btn btn-xs btn-primary" %>
     <%= link_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %>
    </div>
    <% end %>
   </div>

  </div>
 </ul>

<% end %>
</div>
