<h1 align="center">Les articles de <%= @user.username %></h1>
<small><%= pluralize(@articles.count, "article") %></small>
<% @articles.each do |article| %>
<ul class="listing">
  <div class="row" align="center">
   <div class="col-md-4 col-md-offset-4">
     <li class="article-title"><%= link_to article.title, article_path(article) %></li>
   </div>
  </div>
</ul>
<% end %>
<%= link_to 'Back', users_path, class: "btn btn-xs btn-success" %>
